<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_color"
    android:layout_height="match_parent"
    tools:context=".depositMoney1">

    <EditText
        android:id="@+id/accountno"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Enter Account No."
        android:inputType="number" />

    <EditText
        android:id="@+id/depositcash"
        android:layout_width="325dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/accountno"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="186dp"
        android:ems="10"
        android:hint="Deposit Cash"
        android:inputType="number" />

    <Button
        android:id="@+id/finish"
        android:layout_width="178dp"
        android:layout_height="11dp"
        android:layout_below="@+id/depositcash"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="225dp"
        android:background="@drawable/roundedbtn"
        android:text="Finish"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="187dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/accountno"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="42dp"
        android:text="Deposit Money"
        android:textAlignment="center"
        android:textColor="#af121011"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>