<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/gradient_color2"
    tools:context=".createAccount">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:text="1 ) Account Number :"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/accounNumber"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="text" />


    <TextView
        android:layout_width="352dp"
        android:layout_height="32dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="72dp"
        android:text="2 ) Bank Name :"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/bankNames"
        android:layout_width="355dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="92dp"
        android:entries="@array/bank_arrays" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="335dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="376dp"
        android:text="3) Bank City :"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/cityNames"
        android:layout_width="355dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="339dp"
        android:entries="@array/city_arrays" />

    <Button
        android:id="@+id/saveandnext"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="214dp"
        android:background="@drawable/roundedbtn"

        android:text="Save and Next" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cityNames"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-8dp"
        android:layout_marginBottom="311dp"
        android:text="4) IFSC Code :" />

    <EditText
        android:id="@+id/ifscCode_branchname"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/randomnumber"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/accounNumber"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundedbtn"
        android:text="Generate Acc. No."
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_alignEnd="@+id/accounNumber"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-142dp"
        android:layout_marginBottom="124dp"
        android:text="*Please note down Account number for future reference."
        android:textColor="#FFFD0B0B"
        android:textSize="16sp" />


</RelativeLayout>